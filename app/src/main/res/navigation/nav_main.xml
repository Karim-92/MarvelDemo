<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.karim.marveldemo.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_details"
            app:destination="@id/details" />
    </fragment>
    <fragment
        android:id="@+id/details"
        android:name="com.karim.marveldemo.ui.details.Details"
        android:label="details_fragment"
        tools:layout="@layout/details_fragment" />
    <fragment
        android:id="@+id/splash"
        android:name="com.karim.marveldemo.ui.splash.Splash"
        android:label="Splash" >
        <action
            android:id="@+id/action_splash_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>